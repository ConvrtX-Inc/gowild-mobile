<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.android.gowild.data.model.settings.MyAchievementsDataModel" />

        <variable
            name="options"
            type="String" />

        <variable
            name="listener"
            type="com.android.gowild.interfaces.SimpleCallbackValue" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->listener.callback(item)}">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="@dimen/_15sdp"
            image_user="@{item.user}"
            android:src="@drawable/user_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_badge"
            style="@style/Normal"
            set_badge="@{item.rank}"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginStart="23dp"
            android:gravity="center"
            android:textAlignment="gravity"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toEndOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_route_name"
            style="@style/Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@{item.user.firstName + ` ` + item.user.lastName, default=title}"
            app:layout_constraintBottom_toBottomOf="@id/tv_badge"
            app:layout_constraintStart_toEndOf="@id/tv_badge"
            app:layout_constraintTop_toTopOf="@id/iv_profile" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>