<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:background="@drawable/map_border">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_map_card"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_89sdp"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="@id/nestedLayout"
        app:layout_constraintStart_toStartOf="@id/nestedLayout"
        app:layout_constraintBottom_toBottomOf="@id/nestedLayout"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/map" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/route_text_goes_here"
        app:layout_constraintTop_toTopOf="@id/nestedLayout"
        app:layout_constraintStart_toEndOf="@id/cv_map_card" />

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_route_name"
        app:layout_constraintStart_toEndOf="@id/cv_map_card"/>

    <TextView
        android:id="@+id/tv_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.7 Miles"
        android:textSize="11sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toTopOf="@id/iv_location"
        app:layout_constraintStart_toEndOf="@id/iv_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_location"/>

    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintTop_toTopOf="@id/tv_miles"
        app:layout_constraintStart_toEndOf="@id/tv_miles"
        app:layout_constraintBottom_toBottomOf="@id/tv_miles"/>

    <TextView
        android:id="@+id/tv_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 13m"
        android:textSize="11sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toTopOf="@id/iv_clock"
        app:layout_constraintBottom_toBottomOf="@id/iv_clock"
        app:layout_constraintStart_toEndOf="@id/iv_clock"/>

    <TextView
        android:id="@+id/tv_meters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500m"
        android:layout_marginStart="5dp"
        android:textSize="11sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toTopOf="@id/tv_times"
        app:layout_constraintBottom_toBottomOf="@id/tv_times"
        app:layout_constraintStart_toEndOf="@id/tv_times"/>

    <ImageView
        android:id="@+id/iv_route_layer"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/layers"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="@id/tv_meters"
        app:layout_constraintBottom_toBottomOf="@id/tv_meters"
        app:layout_constraintStart_toEndOf="@id/tv_meters" />

    <TextView
        android:id="@+id/tv_try_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/try_route"
        android:textColor="@color/orange_light"
        android:textSize="9sp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="5dp"
        android:background="@drawable/try_route_bg"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_map_card"
        app:layout_constraintTop_toBottomOf="@+id/iv_location" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/save"
        android:textColor="@color/orange_light"
        android:layout_marginStart="5dp"
        android:background="@drawable/try_route_bg"
        android:padding="10dp"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/tv_try_route"
        app:layout_constraintTop_toTopOf="@+id/tv_try_route" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/details"
        android:textSize="9sp"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:background="@drawable/post_btn_bg"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_save"
        app:layout_constraintTop_toTopOf="@+id/tv_save" />

</androidx.constraintlayout.widget.ConstraintLayout>