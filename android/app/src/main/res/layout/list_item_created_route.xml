<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.android.gowild.data.model.routes.RouteDataModel" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="listener"
            type="com.android.gowild.interfaces.CreatedRoutesCallback" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp">

        <View
            android:id="@+id/inner_constraint"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:background="@drawable/new_map_border"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_map"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@id/inner_constraint"
            app:layout_constraintStart_toStartOf="@id/inner_constraint"
            app:layout_constraintTop_toTopOf="@id/inner_constraint">

            <ImageView
                image_url="@{`https://api.gowild.appscorridor.com`+item.picture}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/map" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="@{() -> listener.onEdit(item, position)}"
            android:src="@drawable/ic_edit"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="@id/cv_map"
            app:layout_constraintTop_toTopOf="@id/cv_map" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginStart="5dp"
            android:onClick="@{() -> listener.onDelete(item, position)}"
            android:src="@drawable/ic_delete"
            android:translationZ="90dp"
            app:layout_constraintStart_toEndOf="@id/iv_edit"
            app:layout_constraintTop_toTopOf="@id/iv_edit" />

        <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/roboto"
            android:lines="1"
            android:text="@{item.title, default=@string/route_text_goes_here}"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/cv_map"
            app:layout_constraintTop_toTopOf="@id/inner_constraint" />

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:src="@drawable/ic_location"
            app:layout_constraintStart_toStartOf="@id/tv_route_name"
            app:layout_constraintTop_toBottomOf="@id/tv_route_name" />

        <TextView
            android:id="@+id/tv_miles"
            round_value="@{item.distance_miles}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/txt_color"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_location"
            app:layout_constraintStart_toEndOf="@id/ic_location"
            app:layout_constraintTop_toTopOf="@id/ic_location" />

        <ImageView
            android:id="@+id/ic_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_clock"
            app:layout_constraintBottom_toBottomOf="@id/tv_miles"
            app:layout_constraintStart_toEndOf="@id/tv_miles"
            app:layout_constraintTop_toTopOf="@id/tv_miles"
            app:layout_goneMarginStart="5dp" />

        <TextView
            android:id="@+id/tv_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/roboto"
            android:text="@{item.estimate_time, default=`1h 13m`}"
            android:textColor="@color/txt_color"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_clock"
            app:layout_constraintStart_toEndOf="@id/ic_clock"
            app:layout_constraintTop_toTopOf="@id/ic_clock" />

        <TextView
            android:id="@+id/tv_meters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto"
            android:text="@{String.valueOf(item.distance_meters+`m`), default=`500m`}"
            android:textColor="@color/txt_color"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_hours"
            app:layout_constraintStart_toEndOf="@id/tv_hours"
            app:layout_constraintTop_toTopOf="@id/tv_hours" />

        <ImageView
            android:id="@+id/iv_distance_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:src="@drawable/layers"
            app:layout_constraintBottom_toBottomOf="@id/tv_meters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tv_meters"
            app:layout_constraintTop_toTopOf="@id/tv_meters" />

        <TextView
            android:id="@+id/tv_try_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/new_try_route_bg"
            android:fontFamily="@font/roboto"
            android:onClick="@{() -> listener.onTryRoute(item,position)}"
            android:padding="10dp"
            android:text="@string/try_route"
            android:textColor="@color/orange_light"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/cv_map"
            app:layout_constraintStart_toEndOf="@id/cv_map"
            app:layout_constraintTop_toBottomOf="@id/ic_location" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/new_try_route_bg"
            android:fontFamily="@font/roboto"
            android:onClick="@{() -> listener.onShareRoute(item.id)}"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@id/tv_try_route"
            app:layout_constraintStart_toEndOf="@id/tv_try_route"
            app:layout_constraintTop_toTopOf="@id/tv_try_route" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/post_btn_bg"
            android:fontFamily="@font/roboto"
            android:onClick="@{() -> listener.openDetailsFragment(item.id)}"
            android:padding="10dp"
            android:text="@string/details"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_download"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/iv_download"
            app:layout_constraintTop_toTopOf="@id/iv_download" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>