<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inner_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:background="@drawable/routes_borders"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_89sdp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/inner_constraint"
        app:layout_constraintStart_toStartOf="@id/inner_constraint">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/route_name_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/route_text_goes_here"
        app:layout_constraintTop_toTopOf="@id/inner_constraint"
        app:layout_constraintStart_toEndOf="@id/card" />

    <ImageView
        android:id="@+id/ic_location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/route_name_txt1"
        app:layout_constraintStart_toEndOf="@id/card"/>

    <TextView
        android:id="@+id/miles1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.7 Miles"
        android:textSize="11sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toTopOf="@id/ic_location1"
        app:layout_constraintStart_toEndOf="@id/ic_location1"
        app:layout_constraintBottom_toBottomOf="@id/ic_location1"/>

    <ImageView
        android:id="@+id/ic_clock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintTop_toTopOf="@id/miles1"
        app:layout_constraintStart_toEndOf="@id/miles1"
        app:layout_constraintBottom_toBottomOf="@id/miles1"/>

    <TextView
        android:id="@+id/hours1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 13m"
        android:textSize="11sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toTopOf="@id/ic_clock1"
        app:layout_constraintBottom_toBottomOf="@id/ic_clock1"
        app:layout_constraintStart_toEndOf="@id/ic_clock1"/>

    <TextView
        android:id="@+id/minutes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500m"
        android:layout_marginStart="5dp"
        android:textSize="11sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toTopOf="@id/hours1"
        app:layout_constraintBottom_toBottomOf="@id/hours1"
        app:layout_constraintStart_toEndOf="@id/hours1"/>

    <ImageView
        android:id="@+id/layer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/layers"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="@id/minutes1"
        app:layout_constraintBottom_toBottomOf="@id/minutes1"
        app:layout_constraintStart_toEndOf="@id/minutes1" />

</androidx.constraintlayout.widget.ConstraintLayout>