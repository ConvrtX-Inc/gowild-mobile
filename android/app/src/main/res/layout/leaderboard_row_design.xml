<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/achievement_profile_img"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/profile_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintVertical_bias="1.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/achievement_badge"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginStart="23dp"
        android:src="@drawable/ic_badge_one"
        app:layout_constraintBottom_toBottomOf="@id/achievement_profile_img"
        app:layout_constraintStart_toEndOf="@id/achievement_profile_img"
        app:layout_constraintTop_toTopOf="@id/achievement_profile_img"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_route"
        style="@style/Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="@string/nicolas_norman"
        app:layout_constraintBottom_toBottomOf="@id/achievement_badge"
        app:layout_constraintStart_toEndOf="@id/achievement_badge"
        app:layout_constraintTop_toTopOf="@id/achievement_profile_img" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/achievement_profile_img"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="27dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="27dp" />

</androidx.constraintlayout.widget.ConstraintLayout>