<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".ui.map.runwild.RouteDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/the_foregen_rough_one_normal"
            android:padding="5dp"
            android:text="@string/route_1_text_goes_here"
            android:textColor="@color/lightOrange"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_route_img"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_224sdp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_layout"
                    app:layout_constraintStart_toStartOf="@id/constraint_layout"
                    app:layout_constraintTop_toTopOf="@id/constraint_layout">

                    <com.mapbox.maps.MapView
                        android:id="@+id/map_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_route_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/route1_text_goes_here_new"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_layout"
                    app:layout_constraintStart_toStartOf="@id/constraint_layout"
                    app:layout_constraintTop_toBottomOf="@+id/cv_route_img" />

                <TextView
                    android:id="@+id/tv_distance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/distance"
                    android:textColor="@color/run_wild_text_color"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_layout"
                    app:layout_constraintTop_toBottomOf="@+id/tv_route_name" />

                <TextView
                    android:id="@+id/tv_distance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/roboto"
                    android:text="2 Miles"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_distance_title"
                    app:layout_constraintStart_toStartOf="@id/tv_distance_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_distance_title" />

                <TextView
                    android:id="@+id/tv_elevation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/elevation_gain"
                    android:textColor="@color/run_wild_text_color"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_distance_title"
                    app:layout_constraintEnd_toStartOf="@id/tv_moving_time_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_distance_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_distance_title" />

                <TextView
                    android:id="@+id/tv_elevation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/roboto"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_elevation_title"
                    app:layout_constraintStart_toStartOf="@id/tv_elevation_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_elevation_title" />

                <TextView
                    android:id="@+id/tv_moving_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/moving_time"
                    android:textColor="@color/run_wild_text_color"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_elevation_title"
                    app:layout_constraintEnd_toEndOf="@id/constraint_layout"
                    app:layout_constraintTop_toTopOf="@+id/tv_elevation_title" />

                <TextView
                    android:id="@+id/tv_moving_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/roboto"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_moving_time_title"
                    app:layout_constraintStart_toStartOf="@id/tv_moving_time_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_moving_time_title" />

                <TextView
                    android:id="@+id/tv_max_elevation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_31sdp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/max_elevation"
                    android:textColor="@color/run_wild_text_color"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_distance_title"
                    app:layout_constraintStart_toStartOf="@id/tv_distance_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_distance_value" />

                <TextView
                    android:id="@+id/tv_max_elevation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/roboto"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_max_elevation_title"
                    app:layout_constraintStart_toStartOf="@id/tv_max_elevation_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_max_elevation_title" />

                <TextView
                    android:id="@+id/tv_elapsed_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/elapsed_time"
                    android:textColor="@color/run_wild_text_color"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_max_elevation_title"
                    app:layout_constraintEnd_toEndOf="@id/tv_elevation_title"
                    app:layout_constraintStart_toStartOf="@+id/tv_elevation_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_max_elevation_title" />

                <TextView
                    android:id="@+id/tv_elapsed_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/roboto"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_elapsed_time_title"
                    app:layout_constraintStart_toStartOf="@id/tv_elapsed_time_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_elapsed_time_title" />

                <TextView
                    android:id="@+id/tv_avg_speed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/avg_speed"
                    android:textColor="@color/run_wild_text_color"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_elapsed_time_title"
                    app:layout_constraintEnd_toEndOf="@id/tv_moving_time_title"
                    app:layout_constraintStart_toStartOf="@id/tv_moving_time_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_elapsed_time_title" />

                <TextView
                    android:id="@+id/tv_avg_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/roboto"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_avg_speed_title"
                    app:layout_constraintStart_toStartOf="@id/tv_avg_speed_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_avg_speed_title" />

                <TextView
                    android:id="@+id/btn_leader_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/_37sdp"
                    android:background="@drawable/post_btn_bg"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="Leaderboard"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/constraint_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_elapsed_time_value" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>